<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <objectAnimator
            android:duration="40"
            android:propertyName="translationZ"
            android:valueFrom="@dimen/elevation_2dp"
            android:valueTo="@dimen/elevation_2dp"
            android:valueType="floatType" />
    </item>
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <objectAnimator
            android:duration="40"
            android:propertyName="translationZ"
            android:valueFrom="@dimen/elevation_4dp"
            android:valueTo="@dimen/elevation_2dp"
            android:valueType="floatType" />
    </item>
    <item>
        <objectAnimator
            android:duration="40"
            android:propertyName="translationZ"
            android:valueFrom="@dimen/elevation_2dp"
            android:valueTo="@dimen/elevation_4dp"
            android:valueType="floatType" />
    </item>
</selector>
